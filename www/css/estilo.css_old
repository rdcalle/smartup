/*Clases para el login*/

@media (min-width: 360px) {
  .marco {
    background-color: #F3EAD1;
    border: 1px solid #252728;
    height: 80px;
    width: 134px;
    position: relative;
    top: -138px;
    padding: 1px;
    /*overflow: hidden;*/
    border-radius: 2px;

    /* Sin transparencia para los navegadores que no lo soporten */
    background-color: rgb(243, 234, 209);
    /* Con transparencia */
    background-color: rgba(243, 234, 209, 0.6);
    /* Para IE 5.5 - 7*/
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#99f3ead1, endColorstr=#99f3ead1);
    /* Para IE 8*/
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=#99f3ead1, endColorstr=#99f3ead1)";
  }

  .login {
    background-color: #252728;
    height: 100%;
    width: 130px;
    border-radius: 2px;
}

  .login p {
    color: #DDD;
    font-size: .5em;
    font-weight: bold;
    margin: 0;
    text-align: center;
    padding: 5px 0;
}

  .cabeceraLogin {
}

  .cuerpoLogin {
    background-color: #363637;
    color: #DDD;
    font-size: .6em;
    font-weight: bold;
    height: 60%;
    padding: 5px 3px;
}

  .cuerpoLogin input {
    width: 130px;
    height: 20px;
    font-size: .6em;
  }

  .pieLogin {
    background-color: #3D3E41;
    font-size: .6em;
    font-weight: bold;
    height: 20%;
  }

  .pieLogin div {
    min-height: 25px;
  }


  .cuerpoLogin button {
    width: 130px;
    height: 20px;
    font-size: .6em;
  }
}

